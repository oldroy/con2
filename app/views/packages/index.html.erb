<% content_for :secondary_nav do %>
   <% render 'list_new' %>
<% end %>
<h1>Listing packages for <%= @plan.location %>, v<%=@plan.version%></h1>

<table class="table">
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Plan</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @packages.each do |package| %>
  <tr class=<%= cycle('odd', 'even')%>>
    <td><%= package.name %></td>
    <td><%= package.description %></td>
    <td><%= package.plan_id %></td>
    <td><%= link_to 'Show', [@plan, package] %></td>
    <td><%= link_to 'Edit', edit_plan_package_path(@plan, package) %></td>
    <td><%= link_to 'Destroy', [@plan, package], confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>
