<% content_for :secondary_nav do %>
   <% render 'show_edit' %>
<% end %>
<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @package.name %>
</p>

<p>
  <b>Description:</b>
  <%= @package.description %>
</p>

<p>
  <b>Plan:</b>
  <%= @package.plan_id %>
</p>

<h2>Top-Level Assemblies</h2>

<table class="table">
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th></th>

  </tr>

<% @package.assemblies.each do |assembly| %>
  <tr class=<%= cycle('odd', 'even')%> >
    <td><%= assembly.name %></td>
    <td><%= assembly.description %></td>
    <td><%= link_to 'Show', [@plan, assembly] %></td>
  </tr>
<% end %>
</table>
